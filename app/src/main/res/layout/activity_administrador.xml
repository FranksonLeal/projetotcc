<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">



<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Administrador">

    <ImageView
        android:id="@+id/imagem1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/texto1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:text="educApoio"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textFazerCadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Olá administrador!"
        android:layout_marginTop="45dp"
        android:textAlignment="center"
        android:textColor="#0D0E0E"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texto1" />

    <TextView
        android:id="@+id/textNomeCadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Titulo"
        android:textColor="#0D0E0E"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/editNome"
        app:layout_constraintTop_toBottomOf="@+id/textFazerCadastro" />

    <TextView
        android:id="@+id/textEmailCadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Data inicio"
        android:textColor="#0D0E0E"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/editEmail"
        app:layout_constraintTop_toBottomOf="@+id/editNome" />

    <TextView
        android:id="@+id/textSenhaCadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Data fim"
        android:textColor="#0D0E0E"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/editSenha"
        app:layout_constraintTop_toBottomOf="@+id/editEmail" />

    <TextView
        android:id="@+id/textTelefoneCadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Url"
        android:textColor="#0D0E0E"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/editSenha"
        app:layout_constraintTop_toBottomOf="@+id/editSenha" />

    <TextView
        android:id="@+id/textUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Imagem"
        android:textColor="#0D0E0E"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/checkboxPublicoGeral"
        app:layout_constraintTop_toBottomOf="@+id/checkboxPublicoGeral"
        app:layout_goneMarginTop="20dp" />

    <EditText
        android:id="@+id/editNome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/bg_edittext"
        android:ems="10"
        android:hint="Titulo"
        android:textColor="#626364"
        android:inputType="text"
        android:padding="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texto1" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="45dp"
        android:ems="10"
        android:hint="Data inicio"
        android:textColor="#626364"
        android:background="@drawable/bg_edittext"
        android:padding="13dp"
        android:inputType="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNome" />

    <EditText
        android:id="@+id/editSenha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="45dp"
        android:ems="10"
        android:hint="Data fim"
        android:textColor="#626364"
        android:background="@drawable/bg_edittext"
        android:padding="13dp"
        android:inputType="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editEmail" />

    <EditText
        android:id="@+id/editUrl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="45dp"
        android:ems="10"
        android:hint="URL"
        android:textColor="#626364"
        android:background="@drawable/bg_edittext"
        android:padding="13dp"
        android:inputType="textUri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editSenha" />

    <ImageView
        android:id="@+id/imageViewAid"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textUrl"
        app:layout_constraintStart_toStartOf="@+id/textUrl"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonSelectImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_editbottom"
        android:text="Selecione a imagem"
        android:textColor="@color/white"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="@+id/textUrl"
        app:layout_constraintTop_toBottomOf="@+id/textUrl"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonUploadImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Image"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginEnd="172dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editSenha"
        tools:visibility="visible" />

    <!-- Checkbox para definir o público da notícia -->

    <!-- Caixa de seleção de cursos -->


    <CheckBox
        android:id="@+id/checkboxPublicoGeral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Notícia para todos os usuários"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/editUrl"
        app:layout_constraintTop_toBottomOf="@+id/editUrl" />

    <TextView
        android:id="@+id/textOutrasNoticias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Cadastre outras noticias"
        android:textColor="#0D0E0E"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/buttonCadastrarNoticia"
        app:layout_constraintTop_toBottomOf="@+id/buttonCadastrarNoticia" />

    <EditText
        android:id="@+id/textTituloOutras"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/bg_edittext"
        android:ems="10"
        android:hint="Titulo"
        android:layout_marginTop="30dp"
        android:inputType="text"
        android:padding="13dp"
        android:textColor="#626364"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textOutrasNoticias" />

    <TextView
        android:id="@+id/textDataPubli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data publicação"
        android:textColor="#0D0E0E"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/editEmail"
        app:layout_constraintTop_toBottomOf="@+id/textTituloOutras" />


    <EditText
        android:id="@+id/editDataPubli"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/bg_edittext"
        android:ems="10"
        android:hint="Data inicio"
        android:inputType="none"
        android:padding="13dp"
        android:textColor="#626364"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDataPubli" />


    <Button
        android:id="@+id/buttonCadastrarOutras"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/bg_editbottom"
        android:text="Cadastrar outras"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editDataPubli" />

    <TextView
        android:id="@+id/textCursos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecione os cursos"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/textUrl"
        app:layout_constraintStart_toStartOf="@+id/checkboxPublicoGeral"
        app:layout_constraintTop_toBottomOf="@+id/checkboxPublicoGeral" />

    <Spinner
        android:id="@+id/spinnerCursos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/textCursos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonCadastrarNoticia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/bg_editbottom"
        android:text="Cadastrar"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSelectImage" />

    <Button
        android:id="@+id/btnSair"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="396dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/bg_editbottom"
        android:padding="10dp"
        android:text="Voltar para login"
        android:textColor="@color/white"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCadastrarNoticia" />
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>