<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FB"
    tools:context=".fragments.perfilFragment">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inscrições"
        android:layout_marginTop="45dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Botões para alternar entre auxílios abertos e fechados -->
    <LinearLayout
        android:id="@+id/nav_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/textView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btn_abertos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abertos"
            android:backgroundTint="#841FFD"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_fechados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fechados"
            android:layout_marginStart="16dp"
            android:backgroundTint="#841FFD"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <!-- ScrollView contendo o FrameLayout para o conteúdo dinâmico -->
    <ScrollView
        android:id="@+id/scrollViewContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:contentDescription="Lista de inscrições"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/nav_buttons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:id="@+id/frame_layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Conteúdo temporário para teste de rolagem e acessibilidade -->
            <TextView
                android:id="@+id/temp_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oportunidades.. "
                android:textColor="@color/black"
                android:layout_gravity="center" />

        </FrameLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
